#footer
  position: relative
  
  background-attachment: local
  background-position: bottom
  

  if hexo-config('footer_bg') != false
    &:before
      position: absolute
      width: 100%
      height: 100%
      background-color: alpha($dark-black, .1)
      content: ''

#footer-wrap
  position: absolute
  padding: 1.2rem 1rem 1.4rem
  color: $light-grey
  text-align: center


  a
    color: var(--light-red)

    &:hover
      text-decoration: underline

  .footer-separator
    margin: 0 .2rem

  .icp-icon
    padding: 0 4px
    vertical-align: text-bottom
